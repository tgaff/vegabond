<%= link_to "New Post", new_city_post_path(@city), :method => :get, :class => "newpost" %><br><br>
<div class="cover-image">
  <div class="cover">
    <!-- <p class="profile-edit"><%= link_to "<span class='glyphicon glyphicon-pencil'></span>"
    .html_safe, edit_user_path(current_user) %></p> -->
    <div class="user-image">
      <%= image_tag "avatar.png", class: "image"%>
    </div>
    <div class="profile-info profile-show">
      <h1> <%= @user.first_name %> </h1>
      <h5><%= @user.current_city %> </h5>
      <p>Join date: <%= @user.created_at.strftime("%m/%d/%Y") %> <br>
        <%= link_to "Edit user information", edit_user_path(current_user) %>
      </p>
    </div>
  </div>

<div class=".col-md-4 col-md-offset-2">
  <ul class="profile-content">
    <% @posts.each do |post| %>
      <strong><h2 class="title"><%= link_to post.title, city_post_path(post.city,post) %></h2></strong>
      <%= post.story %></p>
      <%= link_to "Edit", edit_city_post_path(post.city, post),class: "edit" %>
      <%= link_to "Delete Post", destroy_post_path(post.id),class: "delete" ,method: :delete, data: { confirm: "Are you sure?"} %>
    <% end %>
  </ul>
</div>
