<div class="cover-image">
  <div class="cover">
    <!-- <p class="profile-edit"><%= link_to "<span class='glyphicon glyphicon-pencil'></span>"
    .html_safe, edit_user_path(current_user) %></p> -->
    <div class="user-image">
      <%= image_tag "avatar.png", class: "image"%>
    </div>
    <div class="profile-info profile-show">
      <h1> <%= @user.first_name %> </h1>
      <h5><%= @user.current_city %> </h5>
      <p>Join date: <%= @user.created_at.strftime("%m/%d/%Y") %> <br>
        <%= link_to "Edit user information", edit_user_path(current_user) %>
      </p>
    </div>
  </div>

<div class=".col-md-4 col-md-offset-2">
  <ul class="profile-content">
      <% @posts.each do |post| %><br><br>
        <h1 class="profile-show"><strong>Title: </strong><%= link_to post.title, city_post_path([1],post) %></h3>
        <p class="profile-show"><strong>Content: </strong><%= post.story %></p>
      <% end %>
  </ul>
</div>
