<h3 class="guide-text">Update</h3>
  <div class="col-md-10 col-md-offset-2">
    <div class="new-user-form">
      <%= form_for [@city,@post], :html => { :class => "form-group" } do |f| %>

          <div class="">
              <%= f.label :title %>
              <%= f.text_field :title, :class=> "form-control" %>
          </div>

          <div class="">
              <%= f.label :story %>
              <%= f.text_area :story, :class=> "form-control" %>
          </div>

          <div class="">
              <%= f.label :author %>
              <%= f.text_field :author, :class=> "form-control" %><br>
          </div>
          <%= f.submit "Update", :class=> "btn btn-default"  %>
      <% end %>
    </div>
  </div>
