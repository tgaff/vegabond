
<div class=".col-md-4 col-md-offset-2">

  <h1 class="profile-show"><strong><%= @city.name %></strong></h1>
  <br>
  <% if current_user %>
    <%= button_to "New Post", new_city_post_path(@city), :method => :get, :class => "btn btn-info" %><br><br>
    <% @city.posts.each do |post| %>
      <p><strong><%= link_to post.title, city_post_path({id: post.id, city_id: @city[:id]}) %></strong><p>
      <%= button_to "Delete", "/cities/#{@city.id}/posts/#{post.id}",:class => "btn btn-danger", method: :delete %>
      <%= button_to "Edit", edit_city_post_path(@city[:id], post[:id]), method: :get, :class => "btn btn-success" %><br><br>
    <% end %>
  <% else %>
    <% @city.posts.each do |post| %>
      <p><strong><%= link_to post.title, city_post_path({id: post.id, city_id: @city[:id]}) %></strong><p>
    <% end %>
  <% end %>
</div>
