
<div class=".col-md-4 col-md-offset-3">
  <%= link_to "New Post", new_city_post_path(@city), :method => :get, :class => "newpost" %><br><br>
  <h1 class="profile-show"><strong><%= @city.name %></strong></h1>
  <div class="profile-content">
    <br>
    <% if current_user %>
      <% @city.posts.each do |post| %>
        <p><strong><%= link_to post.title, city_post_path({id: post.id, city_id: @city[:id]}) %></strong><p>
        <% if current_user[:id] == post[:user_id] %>
        <%= button_to "Delete Post", "/cities/#{@city.id}/posts/#{post.id}",:class => "delete", method: :delete,data: { confirm: "Are you sure?" } %>
        <%= button_to "Edit", edit_city_post_path(@city[:id], post[:id]), method: :get, :class => "edit" %><br><br>
        <% end %>
      <% end %>
    <% else %>
      <% @city.posts.each do |post| %>
        <p><strong><%= link_to post.title, city_post_path({id: post.id, city_id: @city[:id]}) %></strong><p>
      <% end %>
    <% end %>
  </div>
</div>
