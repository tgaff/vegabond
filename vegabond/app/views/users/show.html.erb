<div class="cover-image">
  <div>
    <div class="user_image">
      <%= image_tag @user.avatar.url (:medium)%>
    </div>
    <div class="profile-info profile-show">
      <h1> <%= @user.first_name %> </h1>
      <h5>From: <%= @user.current_city %> </h5>
      <p>Join date: <%= @user.created_at.strftime("%m/%d/%Y") %> </p>
    </div>
  </div>
</div>
<div class=".col-md-4 col-md-offset-2">
  <ul>
    <% @posts.each do |post| %>
      <h3 class="profile-show"><strong>Title:</strong><%= link_to post.title, post_path(post) %></h3>
      <h5 class="profile-show"><strong>Author:</strong><%= post.author %></h5>
      <p class="profile-show"><strong>Content:</strong><%= post.story %></p>
    <% end %>
  </ul>
</div>
