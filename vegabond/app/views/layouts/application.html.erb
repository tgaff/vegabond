<!DOCTYPE html>
<html>
<head>
  <title>Vegabond</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-dark bg-inverse">
    <a class="navbar-brand" href="#">Vagabond</a>
    <ul class="nav navbar-nav">
     <% if current_user %>
       <li class="nav-item nav-link active"><%= link_to "Profile", user_path(current_user) %></li>
       <li><%= link_to "Log Out", logout_path %></li>
     <% else %>
       <li class="nav-item nav-link active"><%= link_to "Create Account", new_user_path %></li>
       <li class="nav-item nav-link active"><%= link_to "Log In", login_path %></li>
     <% end %>
    </ul>
  </nav>


<%= yield %>

</body>
</html>
